@model web_dev_midterm.ViewModels.User.UserLoginVm

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<h2>Вход в приложение</h2>


<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="User" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
    
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label asp-for="Email" for="floatingInput">Email address</label>
                <span asp-validation-for="Email"></span>
            </div>
    
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label asp-for="Password" for="floatingPassword">Password</label>
                <span asp-validation-for="Password"></span>
            </div>
    
            <div class="col-auto">
                <div class="form-check" style="margin-top: 15px">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="autoSizingCheck2">
                    <label asp-for="RememberMe" class="form-check-label" for="autoSizingCheck2"> Remember me </label>
                </div>
            </div>
    
            <div>
                <input type="submit" class = "btn btn-dark" value="Войти" style="margin-top: 15px"/>
            </div>
        </form>
        
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}